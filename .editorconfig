[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 2
trim_trailing_whitespace = true


[{*.ats,*.cts,*.mts,*.ts}]
max_line_length = 80

[{*.cjs,*.js}]
max_line_length = 80

[{*.markdown,*.md}]
indent_size = 4
tab_width = 4
