{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:primer-react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["build", "node_modules"] ,
    "rules": {
        "react/react-in-jsx-scope": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
